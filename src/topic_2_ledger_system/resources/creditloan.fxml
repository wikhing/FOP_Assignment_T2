<GridPane GridPane.halignment="CENTER" hgap="15" vgap="15" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.171" fx:controller="topic_2_ledger_system.FXcreditLoan" stylesheets="@design.css">
    
    <Label text="Credit Loan" GridPane.halignment="CENTER" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <HBox spacing="10" alignment="CENTER" GridPane.rowIndex="1" GridPane.columnIndex="0">
        <VBox spacing="10" alignment="CENTER">
            <VBox alignment="CENTER">
                <Label text="Loan Amount(RM)" />
                <TextField fx:id="loanPrincipal" maxWidth="120"/>
            </VBox>
            
            <VBox alignment="CENTER">
                <Label text="Interest Rate(%)"/>
                <TextField fx:id="loanInterest" maxWidth="120"/>
            </VBox>
            
            <VBox alignment="CENTER">
                <Label text="Period(months)"/>
                <TextField fx:id="loanPeriod" maxWidth="120"/>
            </VBox>
            
            <Button fx:id="applyBtn" text="Apply Loan" onAction="#applyLoan" prefWidth="90" alignment="CENTER"/>
        </VBox>
        <Separator orientation="VERTICAL"/>
        <VBox spacing="10" alignment="CENTER">
            <VBox alignment="CENTER">
                <Label text="Payment Amount(RM)"/>
                <TextField fx:id="payAmount" maxWidth="130"/>
            </VBox>
            
            <Button fx:id="payBtn" text="Repay Loan" onAction="#repayLoan" prefWidth="90" alignment="CENTER"/>
            
            <Label fx:id="payLoan_info"/>
        </VBox>
    </HBox>
    
    <VBox fx:id="loan_infos" spacing="15" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
    <Button text="&#60;Back" GridPane.rowIndex="3" GridPane.columnIndex="0" onAction="#back"/>
    
    <padding>
        <Insets top="20" bottom="20" left="20" right="20"/>
    </padding>
</GridPane>