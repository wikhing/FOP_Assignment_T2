<GridPane GridPane.halignment="CENTER" hgap="15" vgap="15" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.171" fx:controller="topic_2_ledger_system.FXdepositInterest">

    <Label text="Deposit Interest Predictor" GridPane.rowIndex="0" GridPane.columnIndex="0" GridPane.columnSpan="2"/>

    <Label text="Type of Bank:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <ChoiceBox fx:id="bank_list" value="Choose a Bank" GridPane.rowIndex="1" GridPane.columnIndex="1" prefWidth="170" onAction="#depositInterestPredictor">
        <items>
            <FXCollections fx:factory="observableArrayList">
                <String fx:value="RHB                          - 2.6%"/>
                <String fx:value="Maybank                  - 2.5%"/>
                <String fx:value="Hong Leong             - 2.3%"/>
                <String fx:value="Alliance                    - 2.85%"/>
                <String fx:value="AmBank                   - 2.55%"/>
                <String fx:value="Standard Chartered - 2.65%"/>
            </FXCollections>
        </items>
    </ChoiceBox>

    <Label text="Period:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
    <ChoiceBox fx:id="period_list" value="Choose a Period" GridPane.rowIndex="2" GridPane.columnIndex="1" prefWidth="170" onAction="#depositInterestPredictor">
        <items>
            <FXCollections fx:factory="observableArrayList">
                <String fx:value="Daily"/>
                <String fx:value="Monthly"/>
                <String fx:value="Annually"/>
            </FXCollections>
        </items>
    </ChoiceBox>

    <Label text="Interest:" wrapText="true" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
    <Label fx:id="interest" GridPane.rowIndex="3" GridPane.columnIndex="1" wrapText="true"/>
    <Label fx:id="interest_info" GridPane.rowIndex="4" GridPane.columnIndex="0" GridPane.columnSpan="2"/>
    <Button text="&#60;Back" GridPane.rowIndex="5" GridPane.columnIndex="0" onAction="#back"/>
                
    <padding>
        <Insets top="20" bottom="20" left="20" right="20"/>
    </padding>
