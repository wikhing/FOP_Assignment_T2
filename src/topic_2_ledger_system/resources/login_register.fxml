<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.geometry.Insets?>

<VBox fx:id="box" spacing="25" alignment="CENTER" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.171" fx:controller="topic_2_ledger_system.login_register" stylesheets="@design.css">
    
    <BorderPane fx:id="mainarea">
        <top>
            <StackPane alignment="BOTTOM_CENTER">
                <Label fx:id="app_title" alignment="TOP_CENTER" text="WELCOME TO THE LEDGER SYSTEM!" textAlignment="JUSTIFY"/>
            </StackPane>
            <padding>
                <Insets bottom="5" left="10" right="10" top="15" />
            </padding>
        </top>
        <center>
            
            <StackPane>

                <children>
                    <VBox fx:id="main_btn" spacing="10" alignment="CENTER" visible="true">
                        <Button fx:id="login_btn" text="LOGIN" textAlignment="CENTER" alignment="CENTER" maxHeight="25" maxWidth="100" onAction="#toLogin"/>
                        <Button fx:id="register_btn" text="REGISTER" textAlignment="CENTER" alignment="CENTER"  maxHeight="25" maxWidth="100" onAction="#toRegister"/>
                        <padding>
                            <Insets bottom="10" left="15" right="15" top="10" />
                        </padding>
                    </VBox>
                </children>
                <children>
                    <GridPane fx:id="register" hgap="15" vgap="15" alignment="CENTER" visible="false">
                        <Label fx:id="laregister" text="Register an account" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="0" GridPane.halignment="CENTER"/>

                        <Label text="NAME:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                        <TextField fx:id="name_regis" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                        <Label text="EMAIL:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                        <TextField fx:id="email_regis" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

                        <Label text="PASSWORD:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                        <javafx.scene.control.PasswordField fx:id="pass_regis" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
                        <Label text="Password length should be 8 include with uppercase, lowercase, number and special character" GridPane.columnIndex="0" GridPane.columnSpan="2"  GridPane.rowIndex="3" GridPane.rowSpan="3" GridPane.valignment="CENTER" />

                        <Label text="CONFIRM PASSWORD:" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
                        <javafx.scene.control.PasswordField fx:id="conf_pass_regis" GridPane.columnIndex="1" GridPane.rowIndex="5"/>

                        <HBox spacing="15" alignment="CENTER" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="7">
                            <Button fx:id="re_back_btn" text="&#60;   BACK" textAlignment="CENTER" onAction="#back" visible="false"/>
                            <Button fx:id="submit_register" text="REGISTER" />
                        </HBox>

                    </GridPane>
                </children>
                <children>
                    <GridPane fx:id="login" hgap="15" vgap="15" alignment="CENTER" visible="false">
                        <Label fx:id="lalogin" text="Login to your account" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="0" GridPane.halignment="CENTER"/>

                        <Label text="EMAIL:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                        <TextField fx:id="email_login" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                        <Label text="PASSWORD:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                        <PasswordField fx:id="pass_login" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

                        <HBox spacing="15" alignment="CENTER" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="4">
                            <Button fx:id="lo_back_btn" BorderPane.alignment="CENTER_LEFT" text="&#60;   BACK" textAlignment="CENTER" onAction="#back" visible="false"/>
                            <Button fx:id="submit_login" text="LOGIN"/>
                        </HBox>

                    </GridPane>
                </children>
            </StackPane>

            <padding>
                <Insets bottom="20" left="15" right="15" top="10" />
            </padding>
        </center>
    </BorderPane>
    
</VBox>
