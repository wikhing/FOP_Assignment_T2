<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.171" fx:controller="topic_2_ledger_system.login_register">
    <top>
        <StackPane>
            <BorderPane>
                <top>
                    <Label fx:id="app_title" BorderPane.alignment="BOTTOM_CENTER" text="Welcome to The One Ledger System!" textAlignment="JUSTIFY"/>
                </top>
                <left>
                    <Button fx:id="back_btn" BorderPane.alignment="CENTER_LEFT" text="&#60;Back" textAlignment="CENTER" onAction="#back" visible="false"/>
                </left>
                <padding>
                    <Insets bottom="10" left="15" right="15" top="10" />
                </padding>
            </BorderPane>
        </StackPane>
    </top>
    <center>
        <StackPane>
                <children>
                    <VBox fx:id="main_btn" spacing="10" alignment="CENTER" visible="true">
                        <Button fx:id="login_btn" text="Login" textAlignment="CENTER" alignment="CENTER" maxHeight="25" maxWidth="100" onAction="#toLogin"/>
                        <Button fx:id="register_btn" text="Register" textAlignment="CENTER" alignment="CENTER"  maxHeight="25" maxWidth="100" onAction="#toRegister"/>
                        <padding>
                            <Insets bottom="10" left="15" right="15" top="10" />
                        </padding>
                    </VBox>
                </children>
                <children>
                    <GridPane fx:id="register" hgap="15" vgap="15" alignment="CENTER" visible="false">
                        <Label text="Register an account" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="0" GridPane.halignment="CENTER"/>
                        
                        <Label text="Name: " GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                        <TextField fx:id="name_regis" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                        
                        <Label text="E-mail: " GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                        <TextField fx:id="email_regis" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
                        
                        <Label text="Password: " GridPane.columnIndex="0" GridPane.rowIndex="4"/>
                        <javafx.scene.control.PasswordField fx:id="pass_regis" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
                        <Label text="Password length should be 8 include with uppercase, lowercase, number and special character" GridPane.columnIndex="0" GridPane.columnSpan="2"  GridPane.rowIndex="4" GridPane.rowSpan="3" GridPane.valignment="CENTER" />
                        
                        <Label text="Confirm Password: " GridPane.columnIndex="0" GridPane.rowIndex="6"/>
                        <javafx.scene.control.PasswordField fx:id="conf_pass_regis" GridPane.columnIndex="1" GridPane.rowIndex="6"/>
                        
                        <Button fx:id="submit_register" text="Register" GridPane.halignment="CENTER" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="8"/>
                    </GridPane>
                </children>
                <children>
                    <GridPane fx:id="login" hgap="15" vgap="15" alignment="CENTER" visible="false">
                        <Label text="Login to your account" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="0" GridPane.halignment="CENTER"/>
                        
                        <Label text="E-mail: " GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                        <TextField fx:id="email_login" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                        
                        <Label text="Password: " GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                        <PasswordField fx:id="pass_login" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
                                                
                        <Button fx:id="submit_login" text="Login" GridPane.halignment="CENTER" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="5"/>
                    </GridPane>
                </children>
        </StackPane>
    </center>
</BorderPane>
